@model StudentPortal.Web.Models.Entities.Staff

<h1>Edit Staffs</h1>

@if (Model == null)
{
    <p>No Staff found.</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Sta_Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Sta_Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone Number</label>
            <input type="text" class="form-control" asp-for="Sta_PhoneNumber" />
        </div>

        <div class="form-check mt-3">
            <input type="checkbox" class="form-check-input" asp-for="Sta_Subscribed" />
            <label class="form-check-label" asp-for="Sta_Subscribed">Subscribed</label>
        </div>
        <div class="mt-3">
            <label class="form-label ">Entrollment</label>
            <input type="text" class="form-control" asp-for="Sta_Entrollment" />
        </div>

        <div class="mt-3">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
}