@model StudentPortal.Web.Models.AddStudentViewModel

<h1>Add Student</h1>

<form asp-action="Add" asp-controller="Student" method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label">Phone Number</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" asp-for="Subscribed" />
        <label class="form-check-label" asp-for="Subscribed">Subscribed</label>
    </div>
    <div class="mt-3">
        <label class="form-label">Entrollment</label>
        <input type="text" class="form-control" asp-for="Entrollment" />
    </div>
    <div class="mt-3">
        <label class="form-label">Password</label>
        <input type="text" class="form-control" asp-for="password" />
    </div>
    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>
